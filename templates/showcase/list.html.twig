{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of Actors</h1>

    <table>
        <tbody>
        {{ knp_pagination_render(pagination) }}

        {% for actor in pagination %}
            <tr>
                <th>Actor Id</th>
                <td>{{ actor.actorId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>License</th>
                <td>{{ actor.license }}</td>
            </tr>
            <tr>
                <th>Wlstatus</th>
                <td>{{ actor.wlstatus }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ actor.link }}</td>
            </tr>
            <tr>
                <th>Aliases</th>
                <td>{{ actor.aliases }}</td>
            </tr>
            <tr>
                <th>Attributes</th>
                <td>{{ actor.attributes }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ actor.image|imageRender('pc')|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
